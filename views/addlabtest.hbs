<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/dashboard.css">
    <script src="/dashboard.js"></script>
    <script src="/doctors.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/doctors.css">
    <link rel="icon" href="../images/favicon.png" type="image/x-icon">
    <title>Doctors</title>
    <style>
        .btn {
            background-color: #6d350f;
            color: #fffcf5;

        }

        .fa-upload {
            color: #6d350f;
        }

        #test {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        #test td,
        #test th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #test tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #test tr:hover {
            background-color: #ddd;
        }

        #test th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #6C340F;
            color: white;
        }
        
    </style>
</head>

<body id="body-pd">
    <div class="body-style">
        <header class="header" id="header">
            <div class="header_toggle"> <i class="fas fa-bars" id="header-toggle"></i> </div>
            <nav>
                <div class="header-logo">
                    <img class="logo-1" src="../images/tatva_final1.png" alt="Tatv">
                    <span><img class="logo-2" src="../images/logo.png" alt="Banasthali Vidyapith"></span>
                </div>
            </nav>
        </header>
        <header>
            <nav class="header-navigation">
                <ul class="nav-content">
                    <li class="li-items"><a href="/contact">CONTACT US</a></li>
                    <li class="li-items"><a href="/about">ABOUT US</a></li>
                    {{!-- <li class="li-items"><a href="/">HOME</a></li> --}}
                </ul>
            </nav>
        </header>
    </div>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div><a href="/auth/editHa" class="nav_logo"> <i class="fa fa-user" aria-hidden="true"></i> <span
                        class="nav_name"></span> </a>
                <div class="nav_list">
                    <a href="/hadash" class="nav_link"> <i class="fa fa-th" aria-hidden="true"></i><span
                            class="nav_name">Dashboard</span> </a>
                    <a href="/doctors" class="nav_link active"> <i class="fa fa-user-md" aria-hidden="true"></i> <span
                            class="nav_name">Doctor</span> </a>
                    <a href="/upload" class="nav_link"> <i class="fa fa-flask" aria-hidden="true"></i> <span
                            class="nav_name">View Lab Test</span></a>
                    <a href="/haviewappo" class="nav_link"> <i class="fa fa-medkit" aria-hidden="true"></i> <span
                            class="nav_name">View Appointment</span> </a>
                </div>
            </div>
            <a href="/auth/logout" class="nav_link"><i class="fas fa-sign-out-alt"></i> <span class="nav_name">Sign
                    Out</span> </a>
        </nav>
    </div>
  

    <h2>Add Lab Tests</h2>
    <table id="test">
        <tr>
        <tr>
            <th>Test Id</th>
            <th>Test Name</th>
            <th>Action</th>
        </tr>
        <tr>
            <form action="/auth/addlabtest" method="POST">
                <td><input type="text" name="testid" required></td>
                <td><input type="text" name="testname" required></td>
                <td><input type="submit" value="Add"></td>
            </form>
        </tr>
        </tr>
    </table>

    </div class="alert-container">
    {{#if message }}
    <h4 class="alert alert-danger mt-4">{{message}}</h4>
    {{/if}}
    </div>
    <br><br><br>
    <table id="test">
        <thead class="thead-dark">
            <tr>
                <th>Test Id</th>
                <th>Test Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each rows}}
            <tr>
                <td>{{this.Id}}</td>
                <td>{{this.test_name}}</td>
                
                <td><a href="/deletetest/{{this.Id}}"><i class="fa fa-trash"></i></a></td>
            </tr>

            {{/each}}
        </tbody>
    </table>

    <br><br><br>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>